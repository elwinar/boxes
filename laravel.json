{
	"description": "Laravel development",
	"builders": [
		{
			"type": "virtualbox-iso",
			"guest_os_type": "ArchLinux",
			"iso_url": "http://archlinux.mirrors.ovh.net/archlinux/iso/2015.07.01/archlinux-2015.07.01-dual.iso",
			"iso_checksum": "957232076cd0b32083a702b1b2e77796",
			"iso_checksum_type": "md5",
			"hard_drive_interface": "sata",
			"disk_size": 10240,
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "512"],
				["modifyvm", "{{.Name}}", "--cpus", "1"]
			],
			"boot_wait": "5s",
			"guest_additions_mode": "disable",
			"http_directory": ".",
			"boot_command": [
				"<enter><wait10><wait10><wait10><wait10><wait10><wait10>",
				"curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/install-archlinux.sh<enter><wait>",
				"bash ./install-archlinux.sh<enter>"
			],
			"shutdown_command": "shutdown now",
			"ssh_username": "root",
			"ssh_password": "",
			"ssh_wait_timeout": "20m"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"provision-vagrant.sh",
				"provision-nginx.sh",
				"provision-php.sh",
				"provision-composer.sh",
				"provision-nodejs.sh",
				"provision-gulp.sh",
				"provision-bower.sh",
				"provision-cleanup.sh"
			]
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "{{.Provider}}-laravel.box"
		}
	]
}